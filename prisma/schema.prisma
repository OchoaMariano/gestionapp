generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  password      String
  name          String?
  role          String    @default("usuario") // "admin" o "usuario"
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Client {
  id        String   @id @default(cuid())
  name      String
  email     String?  @unique
  phone     String?
  address   String?
  payments  Payment[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Payment {
  id          String        @id @default(cuid())
  amount      Float
  date        DateTime      @default(now())
  method      String
  description String?
  client      Client        @relation(fields: [clientId], references: [id])
  clientId    String
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
}

model Expense {
  id          String    @id @default(cuid())
  description String
  category    String    // Por ejemplo: 'SERVICIOS', 'SALARIOS', 'INSUMOS', etc.
  amount      Float
  date        DateTime  @default(now())
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Tax {
  id          String    @id @default(cuid())
  type        String    // IVA, GANANCIAS, IIBB, etc.
  amount      Float
  dueDate     DateTime  // Fecha de vencimiento
  paymentDate DateTime? // Fecha de pago (null si no est√° pagado)
  status      String    // PENDIENTE, PAGADO, VENCIDO
  description String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}